%div.sign_up
  %div.left
    %h1 Sign Up

    = form_for(@user) do |f|
      %ul.sign_up_li
        %li= f.label :email
        %li= f.text_field :email

        %li= f.label :password
        %li= f.password_field :password

        %li= f.label :password_confirmation
        %li= f.password_field :password_confirmation

        %li= f.submit 'Sign Up'

  %div.right
    %h1 Sign In

    = form_tag(sessions_path) do
      %ul.sign_up_li
        %li= label_tag :email
        %li= text_field_tag :email

        %li= label_tag :password
        %li= password_field_tag :password

        %li= submit_tag 'Sign Up'
